<simulation verbosity='high'>
   <initialize nbeads='4'>
      <file mode='xyz' units='angstrom'> H2O_cluster_meta.xyz  </file>
      <cell mode='manual' units='angstrom'>[20.0, 0, 0, 0, 20.0, 0, 0, 0, 20.0]</cell>
      <velocities mode='thermal' units='kelvin'> 30 </velocities>
   </initialize>
   <output prefix='10_water'>
      <properties filename='md' stride='1'> [step, time{picosecond}, conserved{kelvin}, temperature{kelvin}, potential{kelvin}, kinetic_cv{kelvin}] </properties>
      <trajectory filename='pos' stride='1' format='xyz'> positions{angstrom} </trajectory>
      <checkpoint filename='checkpoint' stride='1000' overwrite='True'/>
   </output>
   <total_steps> 5000 </total_steps>
   <forces>
      <socket mode="inet">
         <address>localhost</address>
         <port> 31415 </port>
      </socket>
   </forces>
   <ensemble mode='nvt'>
      <thermostat mode='pile_g'>
         <tau units='femtosecond'> 25 </tau>
      </thermostat>
      <timestep units='femtosecond'> 0.4 </timestep>
      <temperature units='kelvin'> 30 </temperature>
   </ensemble>
</simulation>
